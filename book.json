{
	"title": "GitBook 完全指南",
	"author": "Bestony",
	"description": "帮助你玩转 GitBook",
	"language": "zh-hans",
	"structure":{
		"readme":"index.md"
	},
	"plugins": [
		"-lunr", "-search", "search-pro-kui",
		"github",
		"include-codeblock",
		"-sharing", "sharing-plus",
		"anchors",
		"edit-link",
		"copy-code-button",
		"alerts"
	],
	"pluginsConfig": {
		"fontsettings": {
			"theme": "white",
			"family": "sans"
		},
		"github": {
			"url": "https://github.com/bestony/How-To-Gitbook"
		},
		"include-codeblock": {
			"template": "default",
			"unindent": true,
			"theme": "monokai"
		},
		"sharing": {
			"douban": false,
			"facebook": false,
			"google": true,
			"hatenaBookmark": false,
			"instapaper": false,
			"line": true,
			"linkedin": true,
			"messenger": false,
			"pocket": false,
			"qq": false,
			"qzone": true,
			"stumbleupon": false,
			"twitter": true,
			"viber": false,
			"vk": false,
			"weibo": true,
			"whatsapp": false,
			"all": [
				"facebook", "google", "twitter",
				"weibo", "instapaper", "linkedin",
				"pocket", "stumbleupon"
			]
		},
		"edit-link": {
			"base": "https://github.com/bestony/How-To-Gitbook/edit/master",
			"label": "编辑本页内容"
		}
	},
	"links": {
		"sidebar": {
			"Github": "https://github.com/bestony/How-To-Gitbook"
		}
	}
}